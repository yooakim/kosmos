#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS base
WORKDIR /app
EXPOSE 80

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["Kosmos.API/Kosmos.API.csproj", "Kosmos.API/"]
RUN dotnet restore "Kosmos.API/Kosmos.API.csproj"
COPY . .
WORKDIR "/src/Kosmos.API"
RUN dotnet build "Kosmos.API.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "Kosmos.API.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Kosmos.API.dll"]